<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/tools">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitCenter"
                android:src="@drawable/caphesuada" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/product_title"
                        android:layout_width="0dp"
                        android:layout_weight="70"
                        android:layout_height="wrap_content"
                        android:text="Cà phê sữa đá"
                        android:textSize="24sp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/buttonFavorite"
                        android:layout_width="0dp"
                        android:layout_weight="30"
                        android:layout_height="60dp"
                        android:src="@drawable/favorite_btn"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_gravity="end"
                        android:layout_marginLeft="150dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đây là cà phê sữa đá"
                    android:textSize="16sp"
                    android:textColor="#757575" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/priceSection">

        <LinearLayout
            android:id="@+id/quantitySection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_height="wrap_content"
                android:text="Số lượng:"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:layout_gravity="left"
                />

            <include layout="@layout/number_picker" android:id="@+id/numberPicker"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/priceSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/purchaseBtn"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:text="Tổng cộng:"
            android:textSize="20dp"
            android:textColor="#FF2E7D32"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_gravity="left"
            />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="wrap_content"
            android:text="18,000 VNĐ"
            android:textSize="20dp"
            android:textColor="#FF2E7D32"
            android:layout_marginLeft="100dp"
            android:layout_gravity="end"
            />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/cart"
        android:text="Thêm vào giỏ hàng"
        android:textSize="15dp"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/purchaseBtn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
